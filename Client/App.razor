<CascadingAuthenticationState>
    <Router AppAssembly="@typeof(App).Assembly">
        <Found Context="routeData">
            <AuthorizeRouteView RouteData="@routeData" DefaultLayout="@typeof(MainLayout)">
                <Authorizing>
                    <p style="padding: 20px;">Espera...</p>
                </Authorizing>
                <NotAuthorized>
                    <PollaEngendrilClientHosted.Client.Pages.NoAuthorizedComponent />
                </NotAuthorized>
            </AuthorizeRouteView>
            <FocusOnNavigate RouteData="@routeData" Selector="h1" />
        </Found>
        <NotFound>
            <PageTitle style="padding: 20px;">¿Qué haces? Esa página no existe!</PageTitle>
            <LayoutView Layout="@typeof(MainLayout)">
                <p role="alert">Qué lamentable! No hay nada en esta página.</p>
            </LayoutView>
        </NotFound>
    </Router>
</CascadingAuthenticationState>
